{
  "name": "eduace",
  "version": "0.0.1",
  "main": "index.tsx",
  "scripts": {
    "mock": "webpack serve --mode=development --open --hot --env API_HOST=http://localhost:3000 --env MOCK_API=true",
    "start": "webpack serve --mode=development --open --hot --env API_HOST=http://localhost:5000 --env MOCK_API=false",
    "build": "webpack --mode=production --env MOCK_API=false",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odrusso/eduace.git"
  },
  "devDependencies": {
    "@swc/core": "^1.2.85",
    "@swc/jest": "^0.2.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest-axe": "^3.5.2",
    "@types/katex": "^0.11.1",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/react-router": "^5.1.16",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.1",
    "jest": "^27.0.6",
    "jest-axe": "^5.0.1",
    "msw": "^0.34.0",
    "node-fetch": "^2.6.1",
    "node-sass": "^6.0.1",
    "sass": "^1.39.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^2.0.0",
    "swc-loader": "^0.1.14",
    "typescript": "^4.3.5",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "katex": "^0.13.18",
    "mathlive": "^0.69.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "globals": {
      "localStorage": true,
      "document": true,
      "fetch": true,
      "console": true,
      "__dirname": true,
      "test": true,
      "describe": true,
      "expect": true,
      "jest": true
    },
    "rules": {
      "react/prop-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/mocks/styleMock.ts",
      "\\.(s?css)$": "<rootDir>/src/mocks/styleMock.ts"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/**/*.test.{ts,tsx,js,jsx}"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "configFile": ".swcrc"
        }
      ]
    }
  },
  "msw": {
    "workerDirectory": "."
  }
}
